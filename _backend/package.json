{
	"name": "game_broadcaster_backend",
	"version": "0.1.0",
	"bin": {
		"game_broadcaster_backend": "bin/game_broadcaster_backend.js"
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"test": "jest",
		"cdk": "cdk",
		"codegen": "cd lib/api && npx @aws-amplify/cli codegen && cd ../..",
		"build:resolvers": "node utils/build.mjs",
		"prepare": "npm run codegen && npm run build:resolvers",
		"deploy": "npm run prepare && npx aws-cdk deploy",
		"deploy:local": "npm run prepare && npx aws-cdk deploy --profile focus-otter-sandbox --outputs-file output.json"
	},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "20.11.6",
		"aws-cdk": "2.124.0",
		"esbuild": "^0.20.0",
		"glob": "^10.3.10",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "~5.3.3"
	},
	"dependencies": {
		"@aws-amplify/graphql-api-construct": "^1.5.5",
		"@aws-appsync/utils": "^1.6.0",
		"@aws-cdk/aws-amplify-alpha": "^2.124.0-alpha.0",
		"@aws-cdk/aws-cognito-identitypool-alpha": "^2.124.0-alpha.0",
		"aws-cdk-lib": "2.124.0",
		"constructs": "^10.0.0",
		"source-map-support": "^0.5.21"
	}
}
